@using Customer.Membership.Models
@model PlanSelectionModel

<div class="plan-selection">
    <h4 class="mb-3">Choose Your Membership Plan</h4>
    <span asp-validation-for="SelectedPlan" class="text-danger"></span>

    <div class="row">
        @foreach (var plan in Model.AvailablePlans)
        {
            <div class="col-md-4 mb-3 d-flex">
                <label class="membership-plan-card card w-100 h-100">
                    <input type="radio" asp-for="SelectedPlan" value="@plan.SystemName" class="d-none"
                        id="plan_@plan.SystemName" />
                    <div class="card-body d-flex flex-column justify-content-between">
                        <div>
                            <h5 class="card-title">@plan.Role</h5>
                            <h6 class="card-subtitle mb-2 text-muted">$@plan.Price.ToString("0.00")</h6>
                        </div>
                        <p class="card-text mt-3 mb-0">@plan.Description</p>
                    </div>
                </label>
            </div>
        }
    </div>
</div>