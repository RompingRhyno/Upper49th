@model IList<CategoryModel>
<div class="row">
    <template :key="Model.Id" v-for="Model in homePCategories.Model">
        <div class="col">
                <a class="category-item d-block text-center" :href="'/' + Model.SeName">
                    <b-img-lazy :src="Model.PictureModel.ImageUrl" :alt="Model.PictureModel.Title" class="gallery-img"></b-img-lazy>
                    <div class="content">
                        <h6 class="title mb-0">{{ Model.Name }}</h6>
                </a>
            </div>
        </div>
    </template>
</div>


<script asp-location="Footer" asp-order="300">
    var homePCategories = new Vue({
        data: function () {
            return {
                Model: @Json.Serialize(Model)
            }
        }
    });
</script>
